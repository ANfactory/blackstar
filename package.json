{
  "name": "blackstar",
  "version": "0.1.0",
  "description": "Tiny tribute to David Bowie",
  "main": "index.js",
  "watch": {
    "build": {
      "patterns": ["src/client"],
      "extensions": "js,css"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "rm -rf public && mkdir public &&  node_modules/.bin/webpack --progress --colors",
    "start": "node index.js",
    "devstart": "nodemon index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anfactory/blackstar.git"
  },
  "author": "Abdel Nalbou <dobermann@dogstudio.be>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anfactory/blackstar/issues"
  },
  "homepage": "https://github.com/anfactory/blackstar#readme",
  "engines": {
    "node": "4.2.4"
  },
  "dependencies": {
    "express": "4.13.3",
    "jade": "1.11.0",
    "jquery": "2.2.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "3.2.0",
    "css-loader": "0.23.1",
    "extract-text-webpack-plugin": "1.0.1",
    "npm-watch": "0.1.1",
    "style-loader": "0.13.0",
    "webpack": "1.12.11",
    "webpack-dev-server": "1.14.1"
  }
